<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <% include ../../partialA/head %>
    <link rel="stylesheet" href="/stylesheets/jquery.DataTables.css" />
    <link rel="stylesheet" href="/stylesheets/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="/stylesheets/sweetalert/sweetalert.css" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <% include ../../partialA/navbar %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <% include ../../partialA/sidebar %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <h1>Staff Warning List</h1>
            <div class="row">
              <div class="col-sm-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <table id="example" class="display" style="width: 100%">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Major</th>
                          <th>Occupation</th>
                          <th>RFID</th>
                          <th>Phone No</th>
                          <th>Expire In</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var i = 0; i < staffs.length; i++){%>
                        <tr>
                          <td><%= staffs[i].name %></td>
                          <td><%= staffs[i].major %></td>
                          <td><%= staffs[i].year %></td>
                          <td><%= staffs[i].rollNo %></td>
                          <td><%= staffs[i].rfid %></td>

                          <td><%= staffs[i].phone %></td>
                          <td><%= time[i] %></td>
                        </tr>
                        <%}%>
                      </tbody>
                      <tfoot>
                        <tr>
                          <th>Name</th>
                          <th>Major</th>
                          <th>Occupation</th>
                          <th>RFID</th>
                          <th>Phone No</th>
                          <th>Expire In</th>
                        </tr>
                      </tfoot>
                    </table>
                    <div class="text-right mt-3">
                      <button onclick="checkupdate();" class="btn btn-primary">
                        Update Warning List
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <% include ../../partialA/footer %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
  </body>
  <script src="/javascripts/jquery-3.5.1.js
  "></script>
  <script src="/javascripts/jquery.DataTables.js"></script>
  <script src="/javascripts/dataTables.buttons.min.js"></script>
  <script src="/javascripts/buttons.print.min.js"></script>
  <script src="/javascripts/sweetalert/sweetalert.min.js"></script>
  <script>
    $(document).ready(function () {
      $("#example").DataTable({
        dom: "Bfrtip",
        ordering: true,
        buttons: ["print"],
      });
    });
    function checkupdate() {
      $.ajax({
        url: "/admin/warningsta",
        data: {},
        type: "POST",
        success: function (result) {
          if (result.status) {
            swal(
              {
                title: "Good job!",
                text: "Staff Warning list update success",
                icon: "success",
                button: "Done",
              },
              function () {
                location.href = "/admin/warningsta";
              }
            );
          }
        },
      });
    }
  </script>
</html>
