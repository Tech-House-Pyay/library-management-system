<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <% include ../../partialA/head %>
    <link rel="stylesheet" href="/stylesheets/jquery.DataTables.css" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <% include ../../partialA/navbar %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <% include ../../partialA/sidebar %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <h1>Student Book Borrowing List</h1>
            <div class="row">
              <div class="col-sm-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <table id="example" class="display" style="width: 100%">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Name</th>
                          <th>Major</th>
                          <th>Year</th>
                          <th>Roll no.</th>
                          <th>Type</th>
                          <th>Book List</th>
                          <th>Duration</th>
                          <th>Last Action Date</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var i = 0; i < records.length; i++){%>
                        <tr>
                          <td><%= i+1 %></td>
                          <td><%= records[i].student_id.name %></td>
                          <td><%= records[i].student_id.major %></td>
                          <td><%= records[i].student_id.year %></td>
                          <td><%= records[i].student_id.rollNo %></td>
                          <td>
                            <% if(records[i].type == '00'){%>
                            <span class="badge badge-warning">Borrow</span>
                            <%}else{%>
                            <span class="badge badge-success">Return</span>
                            <%}%>
                          </td>
                          <td>
                            <% for(var j=0; j < records[i].books.length; j++){%>
                            <li><%= records[i].books[j].name %></li>
                            <%}%>
                          </td>
                          <td><%= records[i].tol_range %> Days</td>
                          <td>
                            <% if(records[i].type == '00'){%> <%=
                            records[i].borrowed_date %> <%}else{%> <%=
                            records[i].received_date %> <%}%>
                          </td>
                        </tr>
                        <%}%>
                      </tbody>
                      <tfoot>
                        <th>#</th>
                        <th>Name</th>
                        <th>Major</th>
                        <th>Year</th>
                        <th>Roll no.</th>
                        <th>Type</th>
                        <th>Book List</th>
                        <th>Duration</th>
                        <th>Last Action Date</th>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <% include ../../partialA/footer %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
  </body>
  <script src="/javascripts/jquery-3.5.1.js
  "></script>
  <script src="/javascripts/jquery.DataTables.js"></script>
  <script>
    $(document).ready(function () {
      $("#example").DataTable({
        paging: false,
        ordering: false,
        info: false,
        ordering: true,
      });
    });
  </script>
</html>
