  <script>
    $("#frm").submit(function (e) {
      e.preventDefault();
      console.log(e.keyCode);
      var data = { rfid: $("#rfid").val() };
      $.ajax({
        url: "/admin/cdcheckAuthSta",
        data: data,
        type: "POST",
        success: function (result) {
          if (result.data != null) {
            location.href = "/admin/cdstamember/" + result.data._id;
          } else {
            alert("RFID number not found");
            location.href = "/admin/cdstaMemberAuth";
          }
        },
      });
    });
  </script>
</html>
