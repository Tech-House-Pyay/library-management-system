        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title text-center">Check RFID Here</h4>
                    <form class="forms-sample" action="#" id="frm">
                      <div class="form-group">
                        <label for="rfid">Member RFID Code</label>
                        <input
                          type="text"
                          class="form-control"
                          id="rfid"
                          placeholder="RFID Code Here"
                          name="rfid"
                          required
                        />
                      </div>

                      <button
                        type="submit"
                        class="btn btn-primary mr-2 btn-block"
                      >
                        Check
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
