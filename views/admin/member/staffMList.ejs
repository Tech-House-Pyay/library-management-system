<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <% include ../../partialA/head %>
    <link rel="stylesheet" href="/stylesheets/jquery.DataTables.css" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <% include ../../partialA/navbar %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <% include ../../partialA/sidebar %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <h1>Staff Member List</h1>
            <div class="row">
              <div class="col-sm-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <table id="example" class="display" style="width: 100%;">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Department</th>
                          <th>Occupation</th>
                          <th>RFID</th>
                          <th>Status</th>
                          <th>Phone No</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var i = 0; i < staffs.length; i++){%>
                        <tr>
                          <td><%= staffs[i].name %></td>
                          <td><%= staffs[i].dept %></td>
                          <td><%= staffs[i].occupation %></td>
                          <td><%= staffs[i].rfid %></td>
                          <td>
                            <% if(staffs[i].status == "1"){%>
                            <span class="badge badge-success">Active</span>
                            <%}else if(staffs[i].status == "0"){%>
                            <span class="badge badge-warning">Warning</span>
                            <%}else if(staffs[i].status == "-1"){%>
                            <span class="badge badge-secondary">Inactive</span>
                            <%}else{%>
                            <span class="badge badge-danger">Block</span>
                            <%}%>
                          </td>
                          <td><%= staffs[i].phone %></td>
                          <td>
                            <a
                              href="/admin/staUpdate/<%= staffs[i]._id %>"
                              class="btn btn-warning mr-3"
                              role="button"
                              >Update</a
                            ><a
                              href="/admin/staInactive/<%= staffs[i]._id %>"
                              class="btn btn-secondary"
                              role="button"
                              >Inactive</a
                            >
                          </td>
                        </tr>
                        <%}%>
                      </tbody>
                      <tfoot>
                        <th>Name</th>
                        <th>Major</th>
                        <th>Year</th>
                        <th>RFID</th>
                        <th>Status</th>
                        <th>Phone No</th>
                        <th>Action</th>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <% include ../../partialA/footer %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
  </body>
  <script src="/javascripts/jquery-3.5.1.js
  "></script>
  <script src="/javascripts/jquery.DataTables.js"></script>
  <script>
    $(document).ready(function () {
      $("#example").DataTable({
        paging: false,
        ordering: false,
        info: false,
        ordering: true,
      });
    });
  </script>
</html>
