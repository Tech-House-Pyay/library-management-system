            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Update Staff Member</h4>
                    <form
                      class="forms-sample"
                      action="/admin/updatestaffM"
                      method="POST"
                      name="frm"
                    >
                      <input type="hidden" name="id" value="<%= staff._id %>">
                      <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input
                          type="text"
                          class="form-control"
                          id="exampleInputName1"
                          value="<%= staff.name %>"
                          name="name"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label for="rfid">RFID No</label>
                        <input
                          type="text"
                          class="form-control"
                          id="rfid"
                          value="<%= staff.rfid %>"
                          name="rfid"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input
                          type="password"
                          class="form-control"
                          id="exampleInputPassword4"
                          placeholder="Password"
                          name="password"
                        />
                      </div>
                      <div class="form-group">
                        <label for="dept">Deparment</label>
                        <select
                          class="form-control"
                          id="dept"
                          name="dept"
                          required
                        >
                          <option value="Civil" <%= (staff.dept == "Civil")? "selected":"" %> >Civil</option>
                          <option value="EC" <%= (staff.dept == "EC")? "selected":"" %> >EC</option>
                          <option value="EP" <%= (staff.dept == "EP")? "selected":"" %> >EP</option>
                          <option value="MP" <%= (staff.dept == "MP")? "selected":"" %> >MP</option>
                          <option value="MC" <%= (staff.dept == "MC")? "selected":"" %> >MC</option>
                          <option value="IT" <%= (staff.dept == "IT")? "selected":"" %> >IT</option>
                          <option value="ENGLISH" <%= (staff.dept == "ENGLISH")? "selected":"" %> >English</option>
                          <option value="MATH" <%= (staff.dept == "MATH")? "selected":"" %> >Math</option>
                          <option value="MYANMAR" <%= (staff.dept == "MYANMAR")? "selected":"" %> >Myanmar</option>
                          <option value="PHYSIC" <%= (staff.dept == "PHYSIC")? "selected":"" %> >Physic</option>
                          <option value="CHEMISTRY" <%= (staff.dept == "CHEMISTRY")? "selected":"" %> >Chemistry</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="ocpt">Occuption</label>
                        <select
                          class="form-control"
                          id="ocpt"
                          name="ocpt"
                          required
                        >
                          <option value="">Select Occupation</option>
                          <option value="Professer" <%= (staff.occupation == "Professer")? "selected":"" %> >Professer</option>
                          <option value="Associate Professer" <%= (staff.occupation == "Associate Professer")? "selected":"" %>
                            >Associate Professer</option
                          >
                          <option value="Lecturer" <%= (staff.occupation == "Lecturer")? "selected":"" %>>Lecturer</option>
                          <option value="Assistant Lecturer" <%= (staff.occupation == "Assistant Lecturer")? "selected":"" %>
                            >Assistant Lecturer</option
                          >
                          <option value="Tutor" <%= (staff.occupation == "Tutor")? "selected":"" %> >Tutor</option>
                          <option value="Demonstrator" <%= (staff.occupation == "Demonstrator")? "selected":"" %> >Demonstrator</option>
                          <option value="Officer" <%= (staff.occupation == "Officer")? "selected":"" %> >Officer</option>
                          <option value="Others" <%= (staff.occupation == "Others")? "selected":"" %> >Others</option>
                        </select>
                      </div>

                      <div class="form-group">
                        <label for="phone">Phone No</label>
                        <input
                          type="number"
                          class="form-control"
                          id="phone"
                          value="<%= staff.phone %>"
                          name="phone"
                          required
                        />
                      </div>

                      <div class="form-group">
                        <label for="status">Status</label>
                        <select name="status" id="status" class="form-control">
                          <option value="1" <%= (staff.status == '1')? "selected":"" %> >Active</option>
                          <option value="0" <%= (staff.status == '0')? "selected":"" %> >Warning</option>
                          <option value="-1" <%= (staff.status == '-1')? "selected":"" %> >Inactive</option>
                          <option value="-2" <%= (staff.status == '-2')? "selected":"" %> >Block</option>
                        </select>
                      </div>

                      <button
                        type="submit"
                        id="subBtn"
                        class="btn btn-primary mr-2"
                      >
                        Submit
                      </button>
                      <button class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
