<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <% include ../../partialA/head %>
    <link rel="stylesheet" href="/stylesheets/jquery.DataTables.css" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <% include ../../partialA/navbar %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <% include ../../partialA/sidebar %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-sm-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <table id="example" class="display" style="width: 100%">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Author</th>
                          <th>Barcode</th>
                          <th>Borrowing Time</th>
                          <th>Main Cat</th>
                          <th>Sub Cat</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var i = 0; i < cds.length; i++){%>
                        <tr>
                          <td><%= cds[i].name %></td>
                          <td><%= cds[i].author_name %></td>
                          <td><%= cds[i].barcode %></td>
                          <td><%= cds[i].rTime %></td>
                          <td><%= cds[i].mainCat %></td>
                          <td><%= cds[i].subCat %></td>
                          <td>
                            <% if(cds[i].status == "00" || cds[i].status ==
                            "01"){%>
                            <span class="badge badge-success">Active</span>
                            <%}else if(cds[i].status == "10"){%>
                            <span class="badge badge-secondary">Lose</span>
                            <%}%>
                          </td>
                          <td>
                            <a
                              href="/admin/updateCD/<%= cds[i]._id %>"
                              class="btn btn-warning"
                              >Update</a
                            >
                            <% if(cds[i].status == "00" || cds[i].status ==
                            "01"){%>
                            <a
                              href="/admin/disableCD/<%= cds[i]._id %>"
                              class="btn btn-secondary"
                              >Lose</a
                            >
                            <%}else if(cds[i].status == "10"){%>
                            <a
                              href="/admin/activeCD/<%= cds[i]._id %>"
                              class="btn btn-success"
                              >Avaliable</a
                            >
                            <%}%>
                          </td>
                        </tr>
                        <%}%>
                      </tbody>
                      <tfoot>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Barcode</th>
                        <th>Borrowing Time</th>
                        <th>Main Cat</th>
                        <th>Sub Cat</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <% include ../../partialA/footer %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
  </body>
  <script src="/javascripts/jquery-3.5.1.js
  "></script>
  <script src="/javascripts/jquery.DataTables.js"></script>
  <script>
    $(document).ready(function () {
      $("#example").DataTable({
        paging: false,
        ordering: false,
        info: false,
        ordering: true,
      });
    });
  </script>
</html>
